/* pages/pay/pay.wxss */
.header_img {
  width: 100%;
  height: 260rpx;
  background: url('https://www.fuxingfuli.com/images/xcx/images/icon/pay_bg.png') no-repeat center;
  background-size: 100%;
}

.need_pay {
  width: 100%;
  height: 200rpx;
  background: #fff;
  text-align: center;
  padding-top: 60rpx;
}

.pay_title {
  font-size: 32rpx;
  color: #a2a0a0;
}

.pay_num {
  font-size: 38rpx;
  color: #000;
  margin-top: 38rpx;
}

.name_order {
  width: 100%;
  height: 200rpx;
  margin-top: 28rpx;
}

.name_order view {
  height: 98rpx;
  line-height: 98rpx;
  background: #fff;
  font-size: 32rpx;
  color: #000;
  padding: 0 34rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.name_order view text {
  font-size: 34rpx;
  color: #a2a0a0;
  display: inline-block;
  width: 173rpx;
  text-align: right;
  display: inline-block;
  float: left;
}

.shop_name view {
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 510rpx;
  line-height: auto;
}

#confirmPay {
  width: 100%;
  height: 100rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  background: #fc5e35;
  text-align: center;
  line-height: 100rpx;
}

#confirmPay view {
  color: #fff;
  font-size: 36rpx;
}
