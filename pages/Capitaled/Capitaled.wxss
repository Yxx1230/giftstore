}


.capital-info {
  flex: 1;
  padding-left: 25rpx;
}

.capital-info text {
  display: block;
  padding-left: 25rpx;
}

.user-name {
  margin-right: 10rpx;
  font-size: 23rpx;
  color: #333;
  /* float: left; */

}

.action {
  display: inline;
  font-size: 23rpx;
  color: #333;
}

.goods-name {
  font-size: 20rpx;
  color: #4e4e4e;
  margin: 13rpx 0 16rpx;
}

.info-data {
  font-size: 20rpx;
  color: #999;
  margin-top:10rpx;
}

.item-pay {
  font-size: 22rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.item-pay-count {
  font-size: 28rpx;
  color: #fc2717;
  margin-right: 7rpx;
}
