  background-size: 100%;
}
.send {
   width: 70rpx;
  height: 70rpx;
  background: url('https://www.fuxingfuli.com/images/xcx/sh_images/capital/send.png') no-repeat center;
  background-size: 100%;
}
.buy {
   width: 70rpx;
  height: 70rpx;
  background: url('https://www.fuxingfuli.com/images/xcx/sh_images/capital/buy.png') no-repeat center;
  background-size: 100%;
}

.gift {
   width: 70rpx;
