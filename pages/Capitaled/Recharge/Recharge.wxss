/* pages/capital/Recharge/Recharge.wxss */

page {
  width: 100%;
  /* height: 100%; */
  background: #f5f5f5;
}

.recharge-box {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

.header {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  margin-top: 20rpx;
}

.header .header-left {
  font-size: 24rpx;
  padding-left: 20rpx;
  display: flex;
}

.header .header-left .amount {
  color: #ff190c;
}

.amount-info {
  width: 100%;
  height: 100%;
}

.viewstcontent {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  /* margin-top: 20rpx; */
  box-sizing: border-box;
}

.amount-item {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  background: #fff;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 8rpx;
  color: #000;
}

.amount-info .active {
  background: #ff534c;
  border-radius: 6rpx;
  color: #fff !important;
}

.amount-item image {
  width: 48rpx;
  height: 48rpx;
  margin-left: 13rpx;
  vertical-align: middle;
}

.fuicon {
  width: 48rpx;
  height: 48rpx;
  background: url(https://www.fuxingfuli.com/images/giftstore/f_coins.png) no-repeat;
  background-size: 100%;
  margin-left: 20rpx;
}

.amount-item .coin {
  width: 400rpx;
  font-size: 24rpx;
  margin-left: 30rpx;
  display: inline-block;
}

.amount-item .money {
  font-size: 24rpx;
  float: right;
  width: 180rpx;
  color: #ff190c;
  border-left: 0.5rpx solid #f3f3f3;
  text-align: center;
  overflow: hidden;
  /* text-overflow: ellipsis;
  white-space: nowrap; */
}

.amount-info .active {
  background: #ff534c;
  border-radius: 8rpx;
  color: #fff !important;
  overflow: hidden;
}

.amount-info .active input {
  /* background: #fff; */
  /* color: #000; */
  /* height: 30rpx; */
}

.amount-info input {
  height: 30rpx;
}

.test {
  color: #999;
  /* margin-top: 10rpx; */
  font-size: 24rpx;
  padding-left: 20rpx;
}

.conisInp {
  color: #000;
}

.footer {
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #ff534c;
  border-radius: 8rpx;
  color: #fff;
  font-size: 32rpx;
  margin: 0 auto;
  text-align: center;
  margin-top: 40rpx;
}

.success {
  display: none;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9;
  background: #fff;
}

.success_res {
  font-size: 15rpx;
  padding-top: 12rpx;
  text-align: center;
}

.success_icon {
  width: 68rpx;
  padding-top: 56rpx;
  margin: 0 auto;
}

.success_icon image {
  width: 100%;
}

.select_res {
  margin: auto;
  margin-top: 22rpx;
  border: 1rpx solid #ff534c;
  color: #ff534c;
  width: 262rpx;
  padding: 8rpx 0;
  border-radius: 6rpx;
  font-size: 14rpx;
  text-align: center;
}

.active .mint-cell .mint-cell-wrapper, .active input, .active .mint-cell-value {
  background: #ff534c;
}

input::-webkit-input-placeholder {
  font-size: 12rpx;
}

input:-moz-placeholder {
  font-size: 12rpx;
}

input:-ms-input-placeholder {
  font-size: 12rpx;
}

.tips {
  opacity: 0;
  width: auto;
  max-width: 330rpx;
  height: auto;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 14rpx;
  text-align: center;
  position: fixed;
  bottom: 100rpx;
  left: 10rpx;
  right: 10rpx;
  margin-left: auto;
  margin: auto;
  padding: 5rpx 10rpx;
  border-radius: 3rpx;
}

.tips.tipsShow {
  opacity: 0;
  animation: myfirst 2s;
  -moz-animation: myfirst 2s; /* Firefox */
  -webkit-animation: myfirst 2s; /* Safari and Chrome */
  -o-animation: myfirst 2s; /* Opera */
}

@keyframes myfirst {
  0% {
    opacity: 0; /*开始为原始大小*/
  }

  25% {
    opacity: 1; /*放大1.1倍*/
  }

  50% {
    opacity: 1;
  }

  75% {
    opacity: 0;
  }
}
