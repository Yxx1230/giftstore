page {
  background: #f2f2f2;
}

.tab-bar {
  width: 100%;
  height: 80rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-shadow: 0 4rpx 4rpx #d1d1d1;
  font-size: 26rpx;
  color: #333;
}

.tab-item {
  height: 100%;
  line-height: 80rpx;
  padding: 0 24rpx;
}

.tab-item.active {
  color: #f4063a;
  border-bottom: 4rpx solid #f4063a;
}

.gift-list {
  width: 100%;
  height: auto;
  overflow: hidden;
  margin-top: 20rpx;
  padding: 0 20rpx;
}

.totla {
  text-align: center;
  font-size: 26rpx;
  color: #f4063a;
}

.totla text {
  font-size: 40rpx;
  color: #f4063a;
}

.gift-item {
  width: 100%;
  height: auto;
  overflow: hidden;
  background: #fff;
  border: 1rpx solid #e0e0e0;
  border-radius: 20rpx;
  padding: 20rpx;
  margin-top: 28rpx;
}

.gift-img {
  width: 100%;
  height: 360rpx;
}

.gift-name {
  margin-top: 24rpx;
  font-size: 30rpx;
}

.gift-num {
  font-size: 24rpx;
}

.gift-num text {
  color: #f4063a;
  margin: 0;
}

.gift-btn {
  text-align: right;
  font-size: 26rpx;
  color: #f4063a;
  margin-top: 20rpx;
}

.gift-btn text {
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  border: 2rpx solid #f4063a;
  border-radius: 16rpx;
  margin-left: 20rpx;
  text-align: center;
  line-height: 60rpx;
}
